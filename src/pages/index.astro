	<!-- Script para animaciones de scroll -->
	<script is:inline>
		// Función para detectar si un elemento está en el viewport
		function isInViewport(element) {
			const rect = element.getBoundingClientRect();
			return (
				rect.top >= 0 &&
				rect.left >= 0 &&
				rect.bottom <=
					(window.innerHeight ||
						document.documentElement.clientHeight) &&
				rect.right <=
					(window.innerWidth || document.documentElement.clientWidth)
			);
		}

		// Función para activar animaciones cuando el elemento entra en el viewport
		function handleScrollAnimations() {
			const animatedElements =
				document.querySelectorAll(".scroll-animate");

			animatedElements.forEach((element) => {
				if (isInViewport(element)) {
					element.classList.add("animate-in");
				}
			});
		}

		// Ejecutar al cargar la página
		document.addEventListener("DOMContentLoaded", () => {
			handleScrollAnimations();
		});

		// Ejecutar en cada scroll
		window.addEventListener("scroll", () => {
			handleScrollAnimations();
		});

		// Ejecutar en resize para casos de cambio de tamaño
		window.addEventListener("resize", () => {
			handleScrollAnimations();
		});
	</script>
