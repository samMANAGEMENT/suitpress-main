			.animate-marquee {
				display: flex;
				width: max-content;
				animation: marquee 20s linear infinite;
			}

			@media (max-width: 768px) {
				.animate-marquee {
					gap: 2rem;
				}
				.animate-marquee img {
					height: 56px;
