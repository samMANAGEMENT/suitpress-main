	<!-- Carrusel de logos de empresas -->
	<section class="py-20 bg-white relative overflow-hidden">
		<div class="container mx-auto px-6">
			<h2
				class="text-4xl md:text-5xl font-bold text-center text-gray-900 mb-12"
			>
				Sueños que juntos hacemos realidad
			</h2>

			<div class="relative">
				<div class="overflow-hidden rounded-3xlshadow-xl">
					<div
						class="flex items-center gap-12 animate-marquee py-10 px-6"
					>
						<!-- Logos originales -->
						<img
							src="/casita-uñas-logo.jpg"
							alt="Casita Uñas"
							class="h-20 w-auto object-contain transition-all duration-300"
						/>
